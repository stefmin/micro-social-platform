@model IEnumerable<MicroSocialPlatform.Models.ApplicationUser>
@using MicroSocialPlatform.Models

@{
    ViewData["Title"] = "Admin Panel - User Management";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="bi bi-shield-lock me-2"></i>Admin Panel</h2>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-circle me-2"></i>@TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-search me-2"></i>Search Users</h5>
        </div>
        <div class="card-body">
            <form asp-action="Index" method="get" class="row g-3">
                <div class="col-md-10">
                    <input type="text" name="search" class="form-control" placeholder="Search by username, email, or full name..." value="@ViewBag.Search" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Search</button>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0"><i class="bi bi-people me-2"></i>User Management</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>User</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model)
                        {
                            <tr>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        <img src="@(user.ProfileImage ?? "/images/default-avatar.png")"
                                             alt="@user.UserName"
                                             class="rounded-circle"
                                             style="width: 40px; height: 40px; object-fit: cover;">
                                        <div>
                                            <div class="fw-bold">@user.UserName</div>
                                            <small class="text-muted">@user.FullName</small>
                                        </div>
                                    </div>
                                </td>
                                <td>@user.Email</td>
                                <td>
                                    @switch (user.Status)
                                    {
                                        case UserStatus.Active:
                                            <span class="badge bg-success">Active</span>
                                            break;
                                        case UserStatus.Suspended:
                                            <span class="badge bg-warning text-dark">Suspended</span>
                                            break;
                                        case UserStatus.Banned:
                                            <span class="badge bg-danger">Banned</span>
                                            break;
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="d-flex justify-content-end align-items-center gap-2">
                                        <a asp-controller="Profile" asp-action="Index" asp-route-username="@user.UserName" class="btn btn-outline-secondary px-3 py-2" title="View Profile">
                                            <i class="bi bi-eye"></i>
                                        </a>

                                        @if (user.Status == UserStatus.Active)
                                        {
                                            <form asp-action="SuspendUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-warning px-3 py-2" title="Suspend User" onclick="return confirm('Are you sure you want to suspend this user?');">
                                                    <i class="bi bi-pause-circle"></i>
                                                </button>
                                            </form>
                                            <form asp-action="BanUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger px-3 py-2" title="Ban User" onclick="return confirm('Are you sure you want to ban this user? They will not be able to log in.');">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                            <form asp-action="PromoteToAdmin" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-primary px-3 py-2" title="Promote to Admin" onclick="return confirm('Are you sure you want to promote this user to Admin? This will give them full administrative access.');">
                                                    <i class="bi bi-shield-plus"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (user.Status == UserStatus.Suspended)
                                        {
                                            <form asp-action="UnsuspendUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success px-3 py-2" title="Unsuspend User">
                                                    <i class="bi bi-play-circle"></i>
                                                </button>
                                            </form>
                                            <form asp-action="BanUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger px-3 py-2" title="Ban User" onclick="return confirm('Are you sure you want to ban this user?');">
                                                    <i class="bi bi-x-circle"></i>
                                                </button>
                                            </form>
                                        }
                                        else if (user.Status == UserStatus.Banned)
                                        {
                                            <form asp-action="UnbanUser" asp-route-id="@user.Id" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-success px-3 py-2" title="Unban User">
                                                    <i class="bi bi-check-circle"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5">
                    <i class="bi bi-people" style="font-size: 3rem;"></i>
                    <h4 class="mt-3">No users found</h4>
                    <p class="text-muted">Try adjusting your search criteria.</p>
                </div>
            }
        </div>
    </div>
</div>
