@model MicroSocialPlatform.Models.Group

@{
    ViewData["Title"] = "Create Group";
}

<div class="container mt-4" style="max-width: 600px;">
    <h2 class="fw-light mb-4">Create Group</h2>

    <form asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">Group Name <span class="text-danger">*</span></label>
            <input asp-for="Name" class="form-control" placeholder="Enter group name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control" rows="4" placeholder="What is this group about?"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        @* TODO: add image upload *@

        <div class="mb-4">
            <label class="form-label">Privacy</label>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="IsPublic" id="publicGroup" value="true" checked />
                <label class="form-check-label" for="publicGroup">
                    <strong>Public</strong>
                    <div class="text-muted small">Anyone can see posts and join freely</div>
                </label>
            </div>
            <div class="form-check mt-2">
                <input class="form-check-input" type="radio" name="IsPublic" id="privateGroup" value="false" />
                <label class="form-check-label" for="privateGroup">
                    <strong>Private</strong>
                    <div class="text-muted small">Only members can see posts. Users must request to join.</div>
                </label>
            </div>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary">Create Group</button>
            <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
