@page
@model BannedModel
@{
    ViewData["Title"] = "Account Banned";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0"><i class="bi bi-x-circle-fill me-2"></i>Account Banned</h4>
                </div>
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="bi bi-slash-circle" style="font-size: 5rem; color: #dc3545;"></i>
                    </div>
                    <h3 class="text-danger">Your account has been banned</h3>
                    <p class="text-muted mt-3">
                        Your account has been permanently banned from MicroSocialPlatform due to a violation of our community guidelines.
                    </p>
                    <p class="text-muted">
                        If you believe this is a mistake, please contact support.
                    </p>
                    <hr />
                    <a asp-page="/Account/Login" class="btn btn-outline-secondary">Back to Login</a>
                </div>
            </div>
        </div>
    </div>
</div>
